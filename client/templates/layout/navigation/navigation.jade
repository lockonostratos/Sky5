template(name="navigation")
	nav(role="navigation").navbar.main.navbar-fixed-top
		ul.nav.navbar-nav
			li(class="{{isActiveRoute 'home'}}"): a.home(href="{{pathFor 'home'}}"): i.fa.fa-arrow-circle-o-left
			li(class="{{isActiveRoute 'warehouse'}}"): a(href="{{pathFor 'warehouse'}}") Warehouse
			li(class="{{isActiveRoute 'sales'}}"): a(href="{{pathFor 'sales'}}") Sales
			li(class="{{isActiveRoute 'report'}}"): a(href="{{pathFor 'report'}}") Report
		form(role="search").navbar-form.navbar-left
			.form-group
				input(type="text", placeholder="Search").form-control
			button(type="submit").btn.btn-default Submit
		ul.nav.navbar-nav.navbar-right
			li: a(href="/sign-out") ĐĂNG XUẤT
